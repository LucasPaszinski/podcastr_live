<%= if @episode != nil do %>
    <div class="episode">
        <div class="thumbnail-container">
            <button phx-click="back" class="back">
                <img src="/images/arrow-left.svg" alt="Voltar"/>
            </button>
            <img width=700 height=160 src="<%= @episode.thumbnail %>"/>
            <button class="play">
                <img src="/images/play.svg" alt="Tocar EpisÃ³dio" />
            </button>
        </div>

        <header>
            <h1><%= @episode.title %></h1>
            <span><%= @episode.members %></span>
            <span><%= @episode.published_at %></span>
            <span><%= @episode.file.duration %>
        </header>

        <div class="description">
           <%= raw @episode.description %>
        </div>
    </div>
<%= else %>
    <div>Not Found!</div>
<% end %>
